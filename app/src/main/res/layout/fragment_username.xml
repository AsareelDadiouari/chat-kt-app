<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".inscriptionFragment.UsernameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_top_welcome3"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:contentDescription="@string/welcome_page_content_description"
            android:rotationY="-12"
            android:src="@drawable/welcome_bg_foreground" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_page_username_view"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="@string/welcome_page_username_input"
            android:textColor="#000000"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/button"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="25sp"
            android:height="74dp"
            android:background="@color/reddish"
            android:backgroundTint="@color/reddish"
            android:text="@string/welcome_page_connect_button"
             />
    </LinearLayout>
</FrameLayout>